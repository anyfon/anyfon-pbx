{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@main/*": [
                "src/main/*"
            ],
            "@style": [
                "src/style/*"
            ],
            "@component": [
                "src/main/components/*"
            ],
            "@layout": [
                "src/main/layout/*"
            ],
            "@page": [
                "src/main/page/*"
            ],
            "@view": [
                "src/main/view/*"
            ]
        }
    },
    "include": [
        "src/main/**/*.ts",
        "src/main/**/*.tsx",
        "src/main/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
